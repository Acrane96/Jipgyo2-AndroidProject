<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/jonback">

    <Button
        android:id="@+id/button1"
        android:layout_width="166dp"
        android:layout_height="76dp"
        android:layout_marginLeft="210dp"
        android:layout_marginTop="560dp"
        android:background="@drawable/jonmap" />

    <Button
        android:id="@+id/button2"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="555dp"
        android:background="@drawable/jonmain" />

    <Button
        android:id="@+id/button3"
        android:layout_width="346dp"
        android:layout_height="76dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="640dp"
        android:background="@drawable/jonjon" />

    <TextView
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#1e90ff"
        android:textStyle="bold"
        android:text="미션 0개 Clear!"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/Capil"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:gravity="center"
        android:text="이 화면을 캡쳐해서 용지관 XXX호로 제출하시면 경품을 드립니다."
        android:textColor="#b0c4de"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>