<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="@drawable/jonback">

    <Button
        android:id="@+id/to_back"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Capil"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/jonmap"
        android:onClick="to_back_Button_Clicked" />

    <Button
        android:id="@+id/to_tour"
        android:layout_width="160dp"
        android:layout_height="80dp"
        android:layout_below="@+id/Capil"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_toEndOf="@+id/to_back"
        android:layout_toRightOf="@+id/to_back"
        android:background="@drawable/jonmain"
        android:onClick="to_tour_Button_Clicked" />

    <Button
        android:id="@+id/to_main"
        android:layout_width="346dp"
        android:layout_height="76dp"
        android:layout_below="@+id/Capil"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="39dp"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="39dp"
        android:layout_marginRight="39dp"
        android:background="@drawable/jonjon"
        android:onClick="to_main_Button_Clicked" />

    <TextView
        android:id="@+id/Clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textColor="#1e90ff"
        android:textStyle="bold"
        android:text="미션 0/0개 Clear!"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/Capil"
        android:layout_width="301dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="430dp"
        android:gravity="center"
        android:text="이 화면을 캡쳐해서 용지관 XXX호로 제출하시면 경품을 드립니다."
        android:textColor="#b0c4de"
        android:textSize="30dp"
        android:textStyle="bold" />

</RelativeLayout>